<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard | Staff Manager</title>
    <!-- Bootstrap 5 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
    />
    <style>
      body { display: flex; min-height: 100vh; background-color: #f4f6f9; }
      #sidebar { min-width: 250px; max-width: 250px; background: #212529; color:
      #fff; transition: all 0.3s; } #sidebar .nav-link { color: #cfd2d6;
      padding: 15px 20px; } #sidebar .nav-link:hover, #sidebar .nav-link.active
      { background-color: #fe2a2a; color: #fff; } #content { width: 100%;
      padding: 20px; }
    </style>
  </head>
  <body>

    <!-- Sidebar -->
    <nav id="sidebar">
      <div class="sidebar-header p-3 border-bottom border-secondary">
        <h3 class="fw-bold"><span class="text-danger">KETO</span> ADMIN</h3>
      </div>
      <ul class="list-unstyled components mt-3">
        <li>
          <a href="/admin/staff" class="nav-link">
            <i class="bi bi-people-fill me-2"></i>
            Staff Manager
          </a>
        </li>
        <li>
          <a href="/admin/customers" class="nav-link active">
            <i class="bi bi-person-circle me-2"></i>
            Customer Manager
          </a>
        </li>
        <li>
          <a href="/admin/services" class="nav-link active">
            <i class="bi bi-server me-2"></i>
            Service Manager
          </a>
        </li>

        <li>
          <a href="/admin/room-types" class="nav-link active">
            <i class="bi bi-building me-2"></i>
            Room Type Manager
          </a>
        </li>
        <li>
          <a href="/admin/invoices" class="nav-link active">
            <i class="bi bi-house-door-fill me-2"></i>
            Invoices Manager
          </a>
        <li>
          <a href="/" class="nav-link">
            <i class="bi bi-box-arrow-left me-2"></i>
            Back to Home
          </a>
        </li>
      </ul>
    </nav>

    <!-- Nội dung chính thay đổi theo từng trang -->
    <div id="content">
      {{{body}}}
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>